{
  "name": "@vaadin/generator-typescript-cli",
  "version": "0.0.17",
  "description": "A Fusion tool to generate TypeScript code from the OpenAPI document",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">= 16.13"
  },
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:transpile": "tsc --isolatedModules",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "mocha test/**/*.spec.ts --config ../../../.mocharc.cjs",
    "test:coverage": "c8 -c ../../../.c8rc.json npm test",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/fusion.git",
    "directory": "packages/ts/generator-typescript-cli"
  },
  "keywords": [
    "fusion",
    "typescript",
    "generator"
  ],
  "author": "Vaadin Ltd.",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/vaadin/fusion/issues"
  },
  "homepage": "https://vaadin.com/fusion",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tsgen": "bin/index.js"
  },
  "peerDependencies": {
    "@vaadin/generator-typescript-core": "^0.0.17"
  },
  "dependencies": {
    "@vaadin/generator-typescript-utils": "^0.0.17",
    "meow": "^10.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "@vaadin/generator-typescript-core": "^0.0.17",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.1.3",
    "pino": "^7.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "type-fest": "^2.5.1"
  }
}
